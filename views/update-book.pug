extends layout

block content

    h1 Update Book
    if error 
        ul
        each err in error
            li= err.message
        br
    div(class="bookDetailForm")
        form( action="/books/"+book.id , method="post" )
            label(for="title") Title:
            input(type="text" name="title" value= book.title id="title")
            br
            label(for="author") Author:
            input(type="text" name="author" value= book.author id="author")
            br
            label(for="genre") Genre:
            input(type="text" name="genre" value= book.genre id="genre")
            br
            label(for="year") Year:
            input(type="text" name="year" value= book.year id="year") 
            br
            input(class="updateBook" type="submit"  value="Update Book")  
        form(class="deleteForm" action="/books/" + book.id + "/delete" method="post")
            a(class="cancelBtn" href="/") Cancel
            br
            input(class="deleteBtn" type="submit"  value="Delete Book")