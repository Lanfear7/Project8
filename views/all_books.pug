extends layout

block content
    h1= title
    a(href="/books/new") Create New Book
    form(action="/books" method="post")
        input(type="text" name="search")
        input(type="submit" value="Search")
    table
        tr
            th Title
            th Author
            th Genre
            th Year
        if books
            each book in books
                tr
                    td
                        a(href="/books/"+book.id)= book.title
                    td= book.author
                    td= book.genre
                    td= book.year
    br
    - var i = currentPage;
    - var j = totalPages;
    if i < j
        - ++i
        a(href=`/books?page=${i}`) Next Page
    br
    if currentPage > 1
        a(href=`/books?page=${--currentPage}`) Prev Page

